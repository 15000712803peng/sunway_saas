<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_dialog_container"
    android:layout_width="wrap_content"
    android:layout_height="380dp">

    <LinearLayout

        android:layout_marginTop="55dp"
        android:id="@+id/ll_dialog"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:background="@drawable/white_shape2"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="您确定要退出当前用户吗？"
            android:textColor="@color/common_title"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="17dp"
                android:paddingTop="17dp"
                android:text="取消"
                android:textColor="#111D2D"
                android:textSize="16sp" />
            <View
                android:background="#EFF3F4"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="17dp"
                android:paddingTop="17dp"
                android:text="确定"
                android:textColor="#FFF8451B"
                android:textSize="16sp" />


        </LinearLayout>
    </LinearLayout>
    <ImageView

        android:id="@+id/iv_dialog_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/dialog_logout"/>


</RelativeLayout>

