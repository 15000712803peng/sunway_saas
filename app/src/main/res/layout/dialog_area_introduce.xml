<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_dialog_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_marginTop="42dp"
        android:background="@drawable/white_shape2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="38dp"
            android:textColor="#111D2D"
            android:textSize="16sp"
            android:id="@+id/tv_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:paddingBottom="15dp"
            android:paddingTop="16dp"
            android:text="具体服务范围"
             />

        <TextView
            android:textSize="13sp"
            android:textColor="#111D2D"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="center_horizontal"
           android:text="现已覆盖上海外环S20内以及外环外七宝镇、梅龙镇、莘庄地区，更多覆盖范围正在不断拓展中。若您正处于覆盖范围内，但无法正常下单，可致电客服。

" android:layout_marginBottom="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="知道了"
                android:textColor="#111D2D"
                android:textSize="16sp" />


        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_centerHorizontal="true"
        android:src="@mipmap/title_area"
        android:layout_width="100dp"
        android:layout_height="100dp" />



</RelativeLayout>

