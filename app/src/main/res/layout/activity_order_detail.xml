<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:id="@+id/ll_order_detail"
    android:orientation="vertical">
    <include layout="@layout/back_title"/>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/order_deatail_parent"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <include layout="@layout/order_detail_status_top"/>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">



                    <ScrollView
                        android:background="@drawable/white_shape"
                        android:layout_marginTop="10dp"
                        android:scrollbars="none"
                        android:id="@+id/sv_order_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/price_parent_top"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:background="@drawable/white_shape"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="12dp"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="@string/fee_detail"
                                        android:textSize="15dp"
                                        android:textColor="@color/text_gray"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />


                                    <TextView
                                        android:id="@+id/text_order_total_price1"
                                        android:gravity="center_vertical|right"
                                        android:textSize="20dp"
                                        android:lineSpacingExtra="8dp"
                                        android:layout_marginLeft="28dp"
                                        android:textColor="@color/text_dark_black"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>
                            </RelativeLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:id="@+id/order_clothes_detail_parent_top"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </LinearLayout>
                            <LinearLayout
                                android:paddingTop="12dp"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <include layout="@layout/gray_divider"/>

                            </LinearLayout>
                        </LinearLayout>



                            <LinearLayout

                                android:background="@drawable/white_shape"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <include layout="@layout/order_detail_part_one"/>

                                <LinearLayout
                                    android:id="@+id/no_price_parent"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp"
                                    android:background="@drawable/white_shape"
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:orientation="horizontal"

                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:text="@string/fee_detail"
                                                android:textSize="15dp"
                                                android:textColor="@color/text_gray"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content" />


                                            <TextView
                                                android:id="@+id/text_order_total_price"
                                                android:gravity="center_vertical|right"
                                                android:text="待计价"
                                                android:textSize="20dp"
                                                android:lineSpacingExtra="8dp"
                                                android:layout_marginLeft="28dp"
                                                android:textColor="@color/text_dark_black"
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content" />

                                        </LinearLayout>
                                    </RelativeLayout>


                                    <LinearLayout
                                        android:paddingTop="15dp"
                                        android:paddingBottom="15dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <include layout="@layout/gray_divider"/>

                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/price_parent_center"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp"
                                    android:background="@drawable/white_shape"
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:orientation="horizontal"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:text="@string/fee_detail"
                                                android:textSize="15dp"
                                                android:textColor="@color/text_gray"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content" />


                                            <TextView
                                                android:id="@+id/text_order_total_price_center"
                                                android:gravity="center_vertical|right"
                                                android:textSize="20dp"
                                                android:lineSpacingExtra="8dp"
                                                android:layout_marginLeft="28dp"
                                                android:textColor="@color/text_dark_black"
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content" />

                                        </LinearLayout>
                                    </RelativeLayout>

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:id="@+id/order_clothes_detail_parent_center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                    </LinearLayout>
                                    <LinearLayout
                                        android:paddingTop="12dp"

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <include layout="@layout/gray_divider"/>

                                    </LinearLayout>
                                </LinearLayout>

                                <include layout="@layout/order_detail_sender_info"/>

                                <RelativeLayout
                                    android:id="@+id/bottom_divider_parent"
                                    android:background="@android:color/transparent"
                                    android:layout_margin="13dp"
                                    android:visibility="invisible"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:textSize="15sp"
                                            android:textColor="@color/white"

                                            android:padding="13dp"
                                            android:gravity="center"
                                            android:layout_weight="1"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content" />


                                    </LinearLayout>


                                </RelativeLayout>
                            </LinearLayout>




                        </LinearLayout>



                    </ScrollView>





                </RelativeLayout>





            </LinearLayout>

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:id="@+id/bottom_operation"

                android:layout_marginTop="16dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="invisible"
                    android:id="@+id/one_btn_operation_parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:id="@+id/text_one_operation"
                        android:paddingTop="15.5dp"
                        android:paddingBottom="15dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />



                </LinearLayout>

                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/two_btn_operation_parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:id="@+id/text_left_operation"
                        android:padding="13dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:id="@+id/text_right_operation"
                        android:padding="13dp"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

           <!-- <ImageView
                android:id="@+id/image_contact_me"
                android:layout_marginBottom="75dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/icon_contact_me"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->
        </RelativeLayout>


        <ImageButton
            android:visibility="invisible"
            android:id="@+id/button_share"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:src="@mipmap/button_share"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />





        <include layout="@layout/no_data_view" />
        <include layout="@layout/network_fail_view" />
        <include layout="@layout/center_loading_view" />

    </RelativeLayout>





</LinearLayout>
