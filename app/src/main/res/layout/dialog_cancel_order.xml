<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_dialog_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_shape"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingBottom="30dp"
            android:paddingTop="30dip"
            android:text="取消订单原因"
            android:textColor="@color/common_title"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:id="@+id/ll_reason1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <CheckBox
                android:id="@+id/cb_reason1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/reason_box_bg"
                android:button="@null"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="@string/cancel_order_reason1"
                android:textColor="@color/text_dark_black"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reason2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <CheckBox
                android:id="@+id/cb_reason2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/reason_box_bg"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="@string/cancel_order_reason2"
                android:textColor="@color/text_dark_black"
                android:textSize="14sp" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_reason3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <CheckBox
                android:id="@+id/cb_reason3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/reason_box_bg"
                android:button="@null"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="@string/cancel_order_reason3"
                android:textColor="@color/text_dark_black"
                android:textSize="14sp" />


        </LinearLayout>


    </LinearLayout>




    <EditText
        android:id="@+id/et_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="12dp"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:singleLine="true"
        android:hint="请输入取消原因，帮助我们更好服务您。"
        android:textColor="@color/text_gray"
        android:textColorHint="@color/text_gray"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"

        android:layout_marginBottom="33dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/gray_divider"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/brown_corner"
                android:gravity="center"
                android:padding="13dp"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_marginLeft="12dp"
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/red_corner"
                android:gravity="center"
                android:padding="13dp"
                android:text="确认取消"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>

