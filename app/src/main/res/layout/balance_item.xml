<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="18dp"

    android:layout_height="match_parent">

    <RelativeLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_banlance_desc"
            android:text="微信支付"
            android:textSize="17dp"
            android:textColor="@color/text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/text_banlance_change"
            android:layout_alignParentRight="true"
            android:text=""
            android:textSize="17dp"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />





    </RelativeLayout>

    <RelativeLayout
        android:paddingBottom="18dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_recharge_type"
            android:textSize="14dp"
           android:text="充100元送15元"
            android:textColor="#FF2ED0D3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/text_current_banlance"
            android:text="余额：0.0元"
            android:textSize="15dp"
            android:textColor="@color/text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />






    </RelativeLayout>

    <include layout="@layout/gray_divider"/>

</LinearLayout>