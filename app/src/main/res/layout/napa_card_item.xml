<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/napa_card_bg"

        android:paddingTop="20dp"
       android:paddingBottom="11dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="25dp"
            android:text="赛维洗衣线下会员卡"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:paddingLeft="23dp"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:paddingBottom="2dp"
                android:paddingRight="3dp"
                android:layout_alignBottom="@+id/text_money"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:id="@+id/text_money_prmpt"
                android:text="￥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView

                android:layout_toRightOf="@id/text_money_prmpt"
                android:id="@+id/text_money"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text=""
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/white_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <TextView
            android:id="@+id/text_store"
            android:paddingLeft="25dp"
            android:text=""
            android:layout_marginTop="14dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>