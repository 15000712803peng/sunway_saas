<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/rl_dialog_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<LinearLayout
   android:layout_marginTop="45dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_add_addr2"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="50dip"
            android:text="取消订单原因"
            android:textColor="@color/common_title"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:id="@+id/ll_reason1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="28dp">

            <CheckBox
                android:id="@+id/cb_reason1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/check_box_bg2"
                android:button="@null"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/cancel_order_reason1"
                android:textColor="@color/text_dark_black"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reason2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <CheckBox
                android:id="@+id/cb_reason2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/check_box_bg2"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/cancel_order_reason2"
                android:textColor="@color/text_dark_black"
                android:textSize="14sp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:id="@+id/ll_reason4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="28dp">

            <CheckBox
                android:id="@+id/cb_reason4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/check_box_bg2"
                android:button="@null"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/cancel_order_reason4"
                android:textColor="@color/text_dark_black"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reason5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <CheckBox
                android:id="@+id/cb_reason5"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/check_box_bg2"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/cancel_order_reason5"
                android:textColor="@color/text_dark_black"
                android:textSize="14sp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:id="@+id/ll_reason6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="28dp">

            <CheckBox
                android:id="@+id/cb_reason6"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/check_box_bg2"
                android:button="@null"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/cancel_order_reason6"
                android:textColor="@color/text_dark_black"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reason7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <CheckBox
                android:id="@+id/cb_reason7"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/check_box_bg2"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/cancel_order_reason7"
                android:textColor="@color/text_dark_black"
                android:textSize="14sp" />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:id="@+id/ll_reason8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="28dp">

            <CheckBox
                android:id="@+id/cb_reason8"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/check_box_bg2"
                android:button="@null"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/cancel_order_reason8"
                android:textColor="@color/text_dark_black"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reason3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <CheckBox
                android:id="@+id/cb_reason3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/check_box_bg2"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/cancel_order_reason9"
                android:textColor="@color/text_dark_black"
                android:textSize="14sp" />


        </LinearLayout>

    </LinearLayout>


    <EditText
        android:maxHeight="100dp"
        android:maxLength="150"
        android:id="@+id/et_reason"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_dialog_cancel_order"
        android:gravity="top"
        android:textCursorDrawable="@drawable/eidt_cursor"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        android:hint="请输入取消原因，帮助我们更好服务您。"
        android:textColor="@color/text_gray"
        android:textColorHint="@color/text_gray"
        android:textSize="14sp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/gray_divider"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="17dp"
            android:paddingTop="17dp"
            android:text="返回"
            android:textColor="#111D2D"
            android:textSize="16sp" />
        <View
            android:background="#EFF3F4"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="17dp"
            android:paddingTop="17dp"
            android:text="取消订单"
            android:textColor="#F8451B"
            android:textSize="16sp" />


    </LinearLayout>

</LinearLayout>

    <ImageView
        android:scaleType="centerInside"
        android:src="@mipmap/icon_canel_order"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />

</RelativeLayout>

