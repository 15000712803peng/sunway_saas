<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_3dp_white">
    <TextView
        android:enabled="false"
        android:id="@+id/tv_time"
        android:visibility="visible"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:textColor="#A0B1B7"
        android:textSize="14dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2017-05-13"
        android:background="@color/home_bg"/>
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值成功"
            android:textSize="16dp"
            android:textColor="#1F1F21"/>
        <TextView
            android:visibility="visible"
            android:paddingLeft="4dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_message_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEW"
            android:textSize="10dp"
            android:textColor="#F8451B"/>
    </LinearLayout>


    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/ll_user_msg"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:paddingTop="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尊敬的用户："
                android:textSize="13dp"
                android:textColor="#111D2D"/>

            <TextView
                android:id="@+id/tv_activity_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18312345678"
                android:textSize="13dp"
                android:textColor="#1F1F21"/>
        </LinearLayout>

        <LinearLayout
            android:maxEms="10"
            android:singleLine="false"
            android:ellipsize="end"
            android:paddingTop="4dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_user_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您已经充值成功\n如遇到余额未及时到账，请致电客服:"
                android:textSize="13dp"
                android:textColor="#111D2D"/>
            <LinearLayout
                android:layout_gravity="bottom"
                android:id="@+id/ll_message_tel"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400-921-0682"
                    android:textSize="13dp"
                    android:textColor="#20B1D9"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#20B1D9"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="bottom"
            android:id="@+id/ll_message_tel1"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400-921-0682"
                android:textSize="13dp"
                android:textColor="#20B1D9"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#20B1D9"/>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">
                <TextView
                    android:id="@+id/tv_key1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名称："
                    android:textSize="13dp"
                    android:textColor="#111D2D"/>
                <TextView
                    android:id="@+id/tv_value1"
                    android:paddingLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尝鲜劵"
                    android:textSize="13dp"
                    android:textColor="#1F1F21"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">
                <TextView
                    android:id="@+id/tv_key2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金额："
                    android:textSize="13dp"
                    android:textColor="#111D2D"/>
                <TextView
                    android:id="@+id/tv_value2"
                    android:paddingLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100元"
                    android:textSize="13dp"
                    android:textColor="#1F1F21"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">
                <TextView
                    android:id="@+id/tv_key3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="说明："
                    android:textSize="13dp"
                    android:textColor="#111D2D"/>
                <TextView
                    android:id="@+id/tv_value3"
                    android:paddingLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单50元内支付9.9元，免取送费"
                    android:textSize="13dp"
                    android:textColor="#1F1F21"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_key_value"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_key4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效期："
                    android:textSize="13dp"
                    android:textColor="#111D2D"/>
                <TextView
                    android:id="@+id/tv_value4"
                    android:paddingLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-04-06 至 2017-04-13"
                    android:textSize="13dp"
                    android:textColor="#1F1F21"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone"
        android:id="@+id/ll_activity_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:id="@+id/iv_activity_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_activity"/>
        <TextView
            android:id="@+id/tv_activity_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全新充值活动火爆进行中，多充多送，单次充值最高可送 1200元"
            android:textSize="13dp"
            android:textColor="#111D2D"/>
    </LinearLayout>




    <View
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#EFF3F4"/>
    <LinearLayout
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_activity_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账单明细"
            android:textSize="13dp"
            android:textColor="#111D2D"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_order_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_black"/>
    </LinearLayout>
</LinearLayout>
