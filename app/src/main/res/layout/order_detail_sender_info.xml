<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/sender_info_parent"
    android:visibility="invisible"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/white_shape"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:layout_height="wrap_content">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="invisible"
                android:text="@string/fee_detail"
                android:textSize="15dp"
                android:textColor="@color/text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_sender_tips"
                android:text="取送员："
                android:textSize="15dp"
                android:textColor="@color/text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_order_operation_name"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />





        <TextView
            android:id="@+id/text_order_operation_mobile"
            android:text=""
            android:textSize="15dp"
            android:textColor="@color/text_black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
              
                android:lineSpacingExtra="6dp"
                android:id="@+id/text_order_memo"
                android:text="@string/memo_tips"
                android:textSize="15dp"
                android:textColor="@color/text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:id="@+id/text_fill"
            android:text="取送员："
            android:textSize="15dp"
                android:visibility="invisible"
            android:textColor="@color/text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>


        <TextView
            android:id="@+id/text_no_memo"
            android:textSize="15dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="无"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />






    </LinearLayout>

</LinearLayout>