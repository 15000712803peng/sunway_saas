<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/white_shape"
    android:layout_width="match_parent"
    android:paddingBottom="18dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/clock1"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_time"
            android:text="365天23小时"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark_black"
            android:textSize="24sp"
            android:gravity="center"/>

        <TextView

            android:layout_marginLeft="8dp"
            android:textColor="#A0B1B7"
            android:text="已用时"
            android:textSize="13sp"
            android:paddingBottom="3dp"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingLeft="44dp"
            android:paddingRight="44dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_status1"
                android:gravity="center"
                android:text="取件"
                android:textSize="13sp"
                android:textColor="@color/tab_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </LinearLayout>

            <TextView
                android:id="@+id/text_status2"
                android:gravity="center"
                android:text="洗涤"

                android:textSize="13sp"
                android:textColor="@color/tab_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </LinearLayout>


            <TextView
                android:id="@+id/text_status3"
                android:gravity="center"
                android:text="送返"

                android:textSize="13sp"
                android:textColor="@color/tab_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </LinearLayout>



            <TextView
                android:id="@+id/text_status4"
                android:gravity="center"
                android:text="完成"

                android:textSize="13sp"
                android:textColor="@color/tab_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.cnsunway.saas.wash.view.MySeekBar
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/order_progress_bar"
                android:progress="0"
                android:max="100"
                android:minHeight="3dp"
                android:maxHeight="3dp"
                android:progressDrawable="@drawable/order_progress_layer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"

                android:paddingLeft="38dp"
                android:paddingRight="38dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                    <ImageButton
                        android:background="@android:color/transparent"
                        android:src="@drawable/gray_dot1"
                        android:layout_centerInParent="true"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/big_dot1"
                        android:src="@mipmap/new_icon1"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_centerInParent="true"
                        android:visibility="invisible"
                        android:gravity="center"
                        android:text="取件"
                        android:textSize="13sp"
                        android:textColor="@color/tab_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>




                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageButton
                        android:background="@android:color/transparent"
                        android:src="@drawable/gray_dot1"
                        android:layout_centerInParent="true"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/big_dot2"
                        android:src="@mipmap/new_icon1"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                       android:visibility="invisible"
                        android:gravity="center"
                        android:text="取件"
                        android:textSize="13sp"
                        android:textColor="@color/tab_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:background="@android:color/transparent"
                        android:src="@drawable/gray_dot1"
                        android:layout_centerInParent="true"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/big_dot3"
                        android:src="@mipmap/new_icon1"

                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                      android:visibility="invisible"
                        android:gravity="center"
                        android:text="取件"
                        android:textSize="13sp"
                        android:textColor="@color/tab_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:background="@android:color/transparent"
                        android:src="@drawable/gray_dot1"
                        android:layout_centerInParent="true"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/big_dot4"
                        android:src="@mipmap/new_icon1"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:visibility="invisible"
                        android:gravity="center"
                        android:text="取件"
                        android:textSize="13sp"
                        android:textColor="@color/tab_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>



    </LinearLayout>


    <TextView
        android:id="@+id/text_status"
        android:text="等待接单"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_dark_black"
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="当前进度"
        android:layout_gravity="center_horizontal"
        android:textColor="#A0B1B7"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</LinearLayout>
