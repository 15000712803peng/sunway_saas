<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:orientation="vertical"
    >

    <include layout="@layout/back_title" />


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout

                    android:background="#FFFFFF"
                    android:paddingLeft="25dp"
                    android:paddingRight="42dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:paddingRight="12.3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/success"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单已完成"
                            android:textSize="18dp"
                            android:textColor="#444A59"
                            android:id="@+id/textView4" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>


                    </LinearLayout>

                    <TextView
                        android:layout_marginBottom="15dp"
                        android:paddingTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="感谢使用我们的服务，请为我们的服务评价打分。谢谢！"
                        android:textSize="15dp"
                        android:textColor="#444A59"
                        android:id="@+id/textView5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="12.5dp"
                    android:layout_marginRight="8.5dp"
                    android:layout_marginLeft="8.5dp"

                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:paddingBottom="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginTop="24dp"
                            android:paddingLeft="25dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_sender"
                                android:id="@+id/imageView4" />
                            <TextView
                                android:id="@+id/tv_evaluate_sender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="收发员："
                                android:textColor="#444a59"
                                android:textSize="15sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:paddingLeft="67dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="服务质量评分"
                                android:textSize="15dp"
                                android:textColor="#444A59"
                                android:id="@+id/textView3" />

                            <com.cnsunway.wash.view.StarBarView
                                android:id="@+id/view_star_sender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:paddingLeft="10.5dp"
                                android:layout_marginTop="10dp"></com.cnsunway.wash.view.StarBarView>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_marginLeft="45dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EFF3F4"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        android:paddingBottom="12dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:paddingLeft="24dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_store" />

                            <TextView
                                android:id="@+id/text_site"
                                android:paddingLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="门店:"
                                android:textColor="#444a59"
                                android:textSize="15sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:paddingLeft="67dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="服务质量评分"
                                android:textSize="15dp"
                                android:textColor="#444A59"/>
                            <com.cnsunway.wash.view.StarBarView
                                android:paddingLeft="10.5dp"
                                android:id="@+id/view_star_store"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"></com.cnsunway.wash.view.StarBarView>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <EditText
                    android:maxHeight="81.5dp"
                    android:id="@+id/et_evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12.5dp"
                    android:layout_marginRight="8.5dp"
                    android:layout_marginLeft="8.5dp"
                    android:background="#ffff"
                    android:gravity="top"
                    android:maxLength="150"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:hint="来说说此次服务的优点和美中不足吧"
                    android:textColor="#444A59"
                    android:textColorHint="@color/text_gray"
                    android:textSize="16sp" />

                <TextView
                    android:clickable="true"
                    android:id="@+id/rl_evaluate_complete"
                    android:layout_marginRight="8.5dp"
                    android:layout_marginLeft="8.5dp"
                    android:layout_marginTop="12.5dp"
                    android:paddingTop="16.35dp"
                    android:paddingBottom="16.35dp"
                    android:background="@drawable/bg_add_addr3"
                    android:textColor="#ffff"


                    android:text="提交评价"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />




            </LinearLayout>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </RelativeLayout>




    </ScrollView>

</LinearLayout>