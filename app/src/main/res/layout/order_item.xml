<?xml version="1.0" encoding="utf-8"?>
<!--710X375-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="@drawable/card_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.cnsunway.saas.wash.view.OrderStatusView
            android:id="@+id/order_status"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

        </com.cnsunway.saas.wash.view.OrderStatusView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/image_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/clock1"/>


                <TextView
                    android:layout_marginLeft="6dp"
                    android:paddingBottom="6dp"
                    android:id="@+id/tv_time_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="已用时"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:gravity="center"
                    android:layout_alignBottom="@id/tv_time"
                    android:layout_toRightOf="@+id/tv_time"
                    android:layout_toEndOf="@+id/tv_time" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:text="三分钟"
                    android:textSize="25sp"
                    android:textColor="@color/common_title"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/image_arrow"
                    android:layout_toEndOf="@+id/image_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginBottom="8dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/clock1"/>

                    <ImageView
                        android:id="@+id/image_dot"
                        android:layout_centerInParent="true"
                        android:src="@drawable/black_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="#111D2D"
                    android:gravity="center"/>
            </LinearLayout>



        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:background="#f0f0f0"
        android:layout_height="1dp"/>


    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="6dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_tips"
            android:textColor="#A0A5AB"
            android:textSize="12sp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_tips"
            android:textColor="#7cdee8"
            android:textSize="12sp"
            android:visibility="gone"
            android:id="@+id/tv_phone"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_operation"
            android:background="@drawable/orange_shape"
            android:text="立即支付"
            android:padding="6dp"
            android:textSize="12dp"
            android:visibility="visible"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</LinearLayout>
