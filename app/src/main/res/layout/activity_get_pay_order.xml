<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/rl_get_pay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/back_title" />

        <RelativeLayout
            android:id="@+id/pay_order_parent"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:paddingTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/text_black"
                        android:text="@string/order_total_price_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_order_total_price"
                        android:layout_alignParentRight="true"
                        android:textSize="16sp"
                        android:text=""
                        android:textColor="@color/text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/gray_divider"/>
                </LinearLayout>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/text_black"
                            android:text="@string/coupons_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:visibility="invisible"
                            android:textSize="15sp"
                            android:text=""
                            android:textColor="@color/text_gray"
                            android:id="@+id/text_coupon_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>



                    <RelativeLayout
                        android:id="@+id/sel_coupou_parent"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_alignParentRight="true"
                            android:textSize="16sp"
                            android:text="@string/no_available_coupons"
                            android:textColor="@color/text_gray"
                            android:id="@+id/text_no_coupon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             />
                        <LinearLayout
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal"
                            android:id="@+id/has_coupons_parent"
                            android:gravity="center_vertical|right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           >
                            <TextView
                                android:id="@+id/text_coupons_discount"
                                android:textSize="16sp"
                                android:text=""
                                android:textColor="@color/text_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <ImageButton
                                android:layout_marginLeft="4dp"
                                android:background="@android:color/transparent"
                                android:src="@mipmap/icon_arrow_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>



                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/gray_divider"/>
                </LinearLayout>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/text_black"
                        android:text="@string/balance_discount_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/text_balance_discount"
                        android:textSize="16sp"
                        android:text=""
                        android:textColor="@color/text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/gray_divider"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/text_black"
                        android:text="@string/final_pay_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_left_price"
                        android:layout_alignParentRight="true"
                        android:textSize="16sp"
                        android:text=""
                        android:textColor="@color/text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/gray_divider"/>
                </LinearLayout>

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/text_gray"
                        android:text="@string/tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingTop="8dp"
                        android:lineSpacingExtra="8dp"
                        android:textSize="15sp"
                        android:textColor="@color/text_gray"
                        android:text="普通洗涤72小时送回，鞋类或者混合洗涤5-7天送回。"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>-->

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>


    <include layout="@layout/no_data_view" />

    <include layout="@layout/network_fail_view" />

    <include layout="@layout/center_loading_view" />

    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="13dp"
        android:id="@+id/do_pay_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:background="@drawable/red_corner"
           android:padding="13dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="@string/operation_order_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView"
            android:gravity="center_horizontal"/>

        <!--<ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_arrow_right_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->

    </RelativeLayout>


</RelativeLayout>