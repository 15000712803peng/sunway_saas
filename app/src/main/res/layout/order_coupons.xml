<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/no_price_parent"
    android:paddingTop="12dp"
    android:background="@drawable/white_shape"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_online"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/gray_divider"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/text_black"
                            android:text="优惠券"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:visibility="invisible"
                            android:textSize="15sp"
                            android:text=""
                            android:textColor="@color/text_gray"
                            android:id="@+id/text_coupon_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>



                    <RelativeLayout
                        android:id="@+id/sel_coupou_parent"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_alignParentRight="true"
                            android:textSize="15sp"
                            android:visibility="invisible"
                            android:text="@string/no_available_coupons"
                            android:textColor="@color/text_gray"
                            android:id="@+id/text_no_coupon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <LinearLayout
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal"
                            android:id="@+id/has_coupons_parent"
                            android:gravity="center_vertical|right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:id="@+id/text_coupons_discount"
                                android:textSize="15sp"
                                android:text=""
                                android:textColor="@color/red"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <ImageButton
                                android:layout_marginLeft="6dp"
                                android:background="@android:color/transparent"
                                android:src="@mipmap/icon_arrow_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/ll_offline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/gray_divider"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:singleLine="true"
                        android:textSize="15sp"
                        android:textColor="@color/text_black"
                        android:text="门店折扣"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:singleLine="true"
                        android:paddingTop="3dp"
                        android:id="@+id/text_offline_desc"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:singleLine="true"
                        android:id="@+id/text_offline_deduct"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:visibility="invisible"
                        android:paddingTop="3dp"
                        android:singleLine="true"
                        android:textSize="15sp"
                        android:textColor="@color/text_black"
                        android:text="@string/subprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/order_fee_item"/>

    <LinearLayout
        android:paddingTop="14dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/gray_divider"/>

    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_copouns_tips"
            android:textSize="15sp"
            android:textColor="@color/text_gray"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="18dp"
            android:textSize="15sp"
            android:textColor="@color/text_black"
            android:text="实付: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_pay"
            android:textSize="15sp"
            android:textColor="@color/red"
            android:text="￥"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>